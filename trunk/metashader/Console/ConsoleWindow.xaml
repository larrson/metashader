<Window x:Class="metashader.Console.ConsoleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:Properties="clr-namespace:metashader.Properties"        
    WindowStyle="ToolWindow"    
    Title="Console"
    Left="{Binding Path=ConsoleWindowRect.X, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}" 
    Top="{Binding Path=ConsoleWindowRect.Y, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
    Width="{Binding Path=ConsoleWindowRect.Width, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
    Height="{Binding Path=ConsoleWindowRect.Height, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">
    <Grid>
        <RichTextBox Name="_ritchTextBox" Background="LightGray" >
            
        </RichTextBox>    
    </Grid>
</Window>
