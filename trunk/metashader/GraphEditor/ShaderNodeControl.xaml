<UserControl x:Class="metashader.GraphEditor.ShaderNodeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!-- ノード名 -->
        <Border Grid.Row="0" Grid.Column="1" Name="_nameBorder" BorderThickness="2" BorderBrush="White">
            <TextBlock Name="_nameTextBlock" HorizontalAlignment="Stretch" Background="LightGray"  Text="{Binding Path=Name}" />
        </Border>        
        <!-- サムネイル -->
        <Border Grid.Row="1" Grid.Column="1" Name="_thumnailBorder" BorderThickness="2" BorderBrush="White">
            <Grid Name="_thumnailGrid" Background="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>
        <!-- 入力ジョイント -->
        <UniformGrid Name="_inputJointGrid" Grid.Row="1" Grid.Column="2" Columns="1" Width="auto" Height="auto"  VerticalAlignment="Stretch" />                   
        <!-- 出力ジョイント -->       
        <UniformGrid Name="_outputJointGrid" Grid.Row="1" Grid.Column="0" Columns="1" Width="auto" Height="auto"  VerticalAlignment="Stretch" />                   
    </Grid>
</UserControl>
